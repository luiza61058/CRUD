<%- include('layout') -%> <br /><br /><br />
<div class="container">
  <h2><%= title %></h2>
  <form action="/paciente/add" method="post">
    <!-- CPF (Primary Key) -->
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">CPF:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="text"
          name="cpf"
          maxlength="14"
          required
        /><br /><br />
      </div>
    </div>
    
    <!-- Nome Completo -->
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">Nome Completo:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="text"
          name="nome_completo"
          required
        /><br /><br />
      </div>
    </div>

    <!-- Idade -->
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">Idade:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="number"
          name="idade"
          required
        />
      </div>
    </div>

    <!-- Data da Marcação (dia_marc) -->
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">Data da Marcação:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="date"
          name="dia_marc"
          required
        />
      </div>
    </div>

    <!-- Hora da Marcação (hora_marc) -->
    <div class="row mb-2">
      <label class="col-sm-2 col-form-label">Hora da Marcação:</label>
      <div class="col-sm-10">
        <input
          class="form-control form-control-lg"
          type="time"
          name="hora_marc"
          required
        />
      </div>
    </div>

    <br /><br />
    <input class="btn btn-primary" type="submit" value="Submit" />
  </form>
</div>
<script>
  function validarCPF(cpf){
    const regex = /^\d{3}\.\d{3}\.\d{3}\-\d{2}$/;
    return regex.test(cpf);
  }

  document.getElementById('cpf').addEventListener('input', function () {
    const cpf = this.value;
    if (!validarCPF(cpf)) {
      this.setCustomValidity('CPF inválido. Formato esperado: xxx.xxx.xxx-xx');
    } else {
      this.setCustomValidity('');
    }
  });

</script>
