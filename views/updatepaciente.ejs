<%- include('layout') %>
<div class="container">
    <h2><%= title %></h2>
    <form action="/paciente/update/" method="POST">
        <!-- Seleção de Paciente -->
        <label class="col-sm-2 col-form-label">Selecione o Paciente</label>
        <select class="form-control" id="paciente" name="paciente" onchange="preencherCampos()">
            <option value="">Selecione um paciente</option>
            <% pacientes.forEach(paciente => { %>
                <option value="<%= paciente.cpf %>"><%= paciente.nome_completo %></option>
            <% }); %>
        </select>
</div>
<br><br>
<div class="container">
    <!-- Campo Nome -->
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Nome Completo</label>
        <div class="col-sm-10">
            <input type="text" class="form-control form-control-lg" id="nome_completo" name="nome_completo" required>
        </div>
    </div>
    <!-- Campo Idade -->
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Idade</label>
        <div class="col-sm-10">
            <input type="number" class="form-control form-control-lg" id="idade" name="idade" required>
        </div>
    </div>
    <!-- Campo Dia da Marcação -->
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Dia da Marcação</label>
        <div class="col-sm-10">
            <input type="date" class="form-control form-control-lg" id="dia_marc" name="dia_marc" required>
        </div>
    </div>
    <!-- Campo Hora da Marcação -->
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Hora da Marcação</label>
        <div class="col-sm-10">
            <input type="time" class="form-control form-control-lg" id="hora_marc" name="hora_marc" required>
        </div>
    </div>
    <!-- Campo Oculto para CPF -->
    <input type="hidden" id="cpf" name="cpf">
    <br>
    <button type="submit" class="btn btn-primary">Atualizar</button>
</div>
</form>

<!-- Script para preencher os campos -->
<script>
function preencherCampos() {
    const pacienteCpf = document.getElementById('paciente').value;
    if (pacienteCpf) {
        fetch(`/paciente/update/${pacienteCpf}`)
            .then(response => response.json())
            .then(paciente => {
                document.getElementById('cpf').value = paciente.cpf;
                document.getElementById('nome_completo').value = paciente.nome_completo;
                document.getElementById('idade').value = paciente.idade;
                document.getElementById('dia_marc').value = paciente.dia_marc;
                document.getElementById('hora_marc').value = paciente.hora_marc;
            })
            .catch(error => console.error('Erro ao buscar dados do paciente:', error));
    }
}
</script>